
  <h1>Eat Da Burger!</h1>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
      {{name}}

      <button class="eat-burger" data-id="{{this.id}}">EAT!</button>
    </li>
    {{/unless}}
    {{/each}}
  </ul>

  <h1>Burger devoured!</h1>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
      {{name}}

    </li>
    {{/if}}
    {{/each}}
  </ul>

<iframe class=main-image width="200" height="130" alt="burger jumping gif"></iframe>

<h1 class="eat-da">Eat da Burger!</h1>
<div class="row">
  <div class="col-4">
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{name}}

        <button class="eat-burger" data-id="{{this.id}}">EAT!</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>
<h1>Burger devoured!</h1>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{name}}

  </li>
  {{/if}}
  {{/each}}
</ul>

<form class="create-form">
  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="newBurger" name="name">
  </div>

  <button type="submit">Submit</button>
  <P>Enter a burger you want to eat Click the "Submit" button</P>
</form>